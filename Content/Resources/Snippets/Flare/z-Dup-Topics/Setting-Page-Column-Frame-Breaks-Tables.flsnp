            <MadCap:dropDownBody>
                <ol>
                    <li>
                        <MadCap:snippetText src="../Styles/Edit-Style1.flsnp" />
                    </li>
                    <li>
                        <MadCap:snippetText src="../Paragraphs/Breaks-Table-Stylesheet1.flsnp" />
                    </li>
                    <MadCap:snippetBlock src="../Paragraphs/Breaks-Table-Stylesheet-Tab-Options.flsnp" />
                    <li>
                        <MadCap:snippetText src="../Paragraphs/Breaks-Stylesheet1.flsnp" />
                    </li>
                    <li>
                        <MadCap:snippetText src="../Paragraphs/Breaks-Stylesheet2.flsnp" />
                    </li>
                    <li>
                        <p>
                            <MadCap:snippetText src="../Paragraphs/Breaks-Stylesheet3.flsnp" />
                        </p>
                        <MadCap:dropDown class="SecondLevel">
                            <MadCap:dropDownHead>
                                <MadCap:dropDownHotspot>before</MadCap:dropDownHotspot>
                            </MadCap:dropDownHead>
                            <MadCap:dropDownBody>
                                <p>&#160;<MadCap:snippetText src="../../Shared/Co-Fl/Paragraphs/Page-Column-Breaks-Before.flsnp" /><ul class="FirstLevel"><li><span class="SetOffFirstLevel">Automatic </span><MadCap:snippetText src="../../Shared/Co-Fl/Paragraphs/Break-Before-Automatic.flsnp" /></li><li><span class="SetOffFirstLevel">Always </span><MadCap:snippetText src="../../Shared/Co-Fl/Paragraphs/Break-Before-Always.flsnp" /></li><li><span class="SetOffFirstLevel">Avoid </span><MadCap:snippetText src="../../Shared/Co-Fl/Paragraphs/Break-Before-Avoid.flsnp" /></li><li><span class="SetOffFirstLevel">Force to 'left page' </span><MadCap:snippetText src="../../Shared/Co-Fl/Paragraphs/Break-Before-Force-Left-Page.flsnp" /></li><li><span class="SetOffFirstLevel">Force to 'right page' </span><MadCap:snippetText src="../../Shared/Co-Fl/Paragraphs/Break-Before-Force-Right-Page.flsnp" /></li></ul></p>
                            </MadCap:dropDownBody>
                        </MadCap:dropDown>
                        <MadCap:dropDown class="SecondLevel">
